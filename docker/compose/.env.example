# Environment Variables for Sparkplug B OEE System
# Copy this file to .env and customize values for your environment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
SQL_SA_PASSWORD=ComplexPassword123!
DATABASE_NAME=OEE_Dashboard
DATABASE_USER=sa

# =============================================================================
# MQTT BROKER CONFIGURATION
# =============================================================================
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_USE_TLS=false

# =============================================================================
# SPARKPLUG CONFIGURATION
# =============================================================================
SPARKPLUG_GROUP_ID=OEE_Production
SPARKPLUG_NODE_ID=OEE_Node_01

# =============================================================================
# PLC CONFIGURATION
# =============================================================================
# Set these to actual PLC IP addresses in production
PLC1_HOST=plc-simulator-s7
PLC2_HOST=plc-simulator-ab

# For real PLCs, use actual IP addresses:
# PLC1_HOST=192.168.1.100
# PLC2_HOST=192.168.1.101

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
GRAFANA_PASSWORD=admin123

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Django Secret Key (generate a new one for production)
DJANGO_SECRET_KEY=your-secret-key-here

# SSL/TLS Certificates
# SSL_CERT_PATH=/app/certs/server.crt
# SSL_KEY_PATH=/app/certs/server.key
# SSL_CA_PATH=/app/certs/ca.crt

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
# Worker configuration
CELERY_WORKER_CONCURRENCY=4
CELERY_WORKER_MAX_TASKS_PER_CHILD=1000

# Database connection pooling
DATABASE_CONN_MAX_AGE=3600
DATABASE_CONN_POOL_SIZE=20

# MQTT client settings
MQTT_KEEPALIVE=60
MQTT_QOS=1
MQTT_CLEAN_SESSION=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
STRUCTURED_LOGGING=true

# =============================================================================
# DEVELOPMENT/TESTING OVERRIDES
# =============================================================================
# Uncomment for development
# DEBUG=true
# LOG_LEVEL=DEBUG

# Uncomment for testing
# TESTING=true
# TEST_DATABASE=test_oee_dashboard